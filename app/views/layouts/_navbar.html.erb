<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">

            <%=link_to root_path do %>
                <%=image_tag 'logo.png', alt:'logo', id:'logo-navbar'%>
            <%end%>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <%= link_to "Team", team_path, class: "nav-link active" %>
                    </li>
                    <li class="nav-item">
                       <%= link_to "Contact us", "mailto:tepepeka@protonmail.com", class: "nav-link active" %>
                    </li>
                </ul>

                <div class="align-self-center">
                  <i class="fas fa-sign-in-alt text-warning"></i>
                    <% if user_signed_in? %>
                        <%= link_to current_user.email, user_path(current_user) %>
                        <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
                    <% else %>
                        <%= link_to 'Login', new_user_session_path %>
                        <%= link_to 'Sign up', new_user_registration_path %>
                        <%=link_to user_google_oauth2_omniauth_authorize_path, method: :post do %>
                            <%=image_tag 'google-logo.png', alt:'logo', id:'logo-navbar-google'%>
                        <%end%>
                    <% end %>
                </div>

            </div>
        </div >
    </nav>
</header>

