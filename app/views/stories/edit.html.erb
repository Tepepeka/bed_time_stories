<%= form_with( model:@story, url:story_path, method: :put, local: true) do |f| %>
  <div class="container">
    <div class="row py-4">
      <div class="col-md-12">
        <div class="card">
      
          <div class="card-header text-center">
            <%= image_tag ("logo.png") %>
          </div>

          <div class="card-body">
            <h1><strong>Edit story</strong></h1>

            <div class="form-group">
              <label>Story title</label>
              <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control" %>
            </div>

            <div class="form-group">
              <label>Story content</label>
              <%= f.text_area :content, autofocus: true, autocomplete: "content", class: "form-control" %>
            </div>

            <div class="form-group">
              <label>Story author</label>
              <%= f.text_field :author, autofocus: true, autocomplete: "author", class: "form-control" %>
            </div>
          </div>

          <div class="card-footer text-end">
            <button type="submit" class="btn btn-warning">Update</button>
            <%= link_to "Back", story_path, class: "btn btn-primary" %>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>