<%= form_with( model:@story, url:stories_path, method: :post, local: true) do |f| %>    
  <div class="container">
    <div class="row py-4">
      <div class="col-md-12">
        <div class="card">

          <div class="card-header text-center">
            <%= image_tag ("logo.png") %>
          </div>

          <div class="card-body">
            <h1><strong>New story</strong></h1>

            <div class="form-group">
              <label>Story title</label>
              <%= f.text_field :title, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <label>Story content</label>
              <%= f.text_area :content, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <label>Story author</label>
              <%= f.text_field :author, autofocus: true, class: "form-control" %>
            </div>

          </div>

          <div class="card-footer text-end">
            <button type="submit" class="btn btn-warning">New</button>
            <%= link_to "Back", root_path, class: "btn btn-primary" %>
          </div>
        
        </div>
      </div>
    </div>
  </div>
<% end %>