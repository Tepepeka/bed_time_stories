<div class="container">
  <div class="row py-4">
    <div class="col-md-12">
      <div class="card">
      
        <div class="card-header backgroud-card">
         <%= image_tag ("image_test.jpg"), class: "resize-card img-responsive" %>
        </div>

        <div class="card-body">
            <h1 class="card-title"><strong><%= @story.title %></strong></h1>
            <p class="card-text"><%= @story.content %></p>
            <p class="card-author"><em><%= @story.author %></em></p>
        </div>
        
        <div class="card-footer text-end">
            <p>
                <%= link_to "Back", stories_path, class: "btn btn-primary" %>
                    <% if current_user %>
                        <%if current_user.id == @story.user_id%>
                            <%= link_to "Edit", edit_story_path, class: "btn btn-secondary" %>
                            <%= link_to "Delete", story_path, class: "btn btn-danger", method: "DELETE", data: {confirm: 'Are you sure?'} %>
                        <% end %>
                    <% end %>
            </p>
        </div>

      </div>
    </div>
  </div>
</div>