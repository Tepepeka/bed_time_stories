<%= form_for resource, as: resource_name, url: password_path(resource_name), html: { class: "form-password mt-3" } do |f| %>
  
  <div class="container">
    <div class="row py-4">
      <div class="col-md-4 offset-md-4 ">
        <div class="card">

          <div class="card-header text-center">
            <%= image_tag ("logo.png")%>
          </div>

          <div class="card-body">
          <h1 class="text-center"><strong>Change your password</strong></h1>
          <%= devise_error_messages! %>
          <!-- Si problÃ¨me de message error
          <%= render "devise/shared/error_messages", resource: resource %>
          -->
          <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <%= f.label :password, "New password" %><br />
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm new password" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>

          <div class="card-footer text-end">
            <%= f.submit "Change my password", class: "btn btn-lg btn-primary btn-block" %>
            <p>
              <%= render "devise/shared/links" %>
            </p>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>