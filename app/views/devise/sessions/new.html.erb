<%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "form-login mt-3" } do |f| %>
  
  <div class="container">
    <div class="row py-4">
      <div class="col-md-4 offset-md-4 ">
        <div class="card">
    
          <div class="card-header text-center">
            <%= image_tag ("logo.png")%>
          </div>

          <div class="card-body">
          <h1 class="text-center"><strong>Log in</strong></h1>
          <%= devise_error_messages! %>
          <!-- Si problÃ¨me de message error
          <%= render "devise/shared/error_messages", resource: resource %>
          -->

            <div class="form-group">
              <%= f.label :email, "Email" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, "Password" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group mt-2">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </div>

          <div class="card-footer text-end">
            <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
            <p>
            <%= render "devise/shared/links" %>
            </p>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>