<%= form_for resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post } do |f| %>

  <div class="container">
    <div class="row py-4">
      <div class="col-md-4 offset-md-4 ">
        <div class="card">

            <div class="card-header text-center">
              <%= image_tag ("logo.png")%>
            </div>

            <div class="card-body">
            <h1 class="text-center"><strong>Resend confirmation instructions</strong></h1>
            <%= devise_error_messages! %>
            <!-- Si problÃ¨me de message error
            <%= render "devise/shared/error_messages", resource: resource %>
            -->

              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
              </div>
            </div>

          <div class="card-footer text-end">
            <%= f.submit "Resend instructions", class: "btn btn-lg btn-primary btn-block" %>
            <p>
              <%= render "devise/shared/links" %>
            </p>
          </div>
    
        </div>
      </div>
    </div>
  </div>
<% end %>